            },

            {
                "name"              : "elect_getting",
                "description"       : "Get status of ELEC (electrical load value for watt and KWH) for verifying value which is available",
                "input"             : {
                    "devicetype"    : "zwave",
                    "id"            : "D_ID",
                    "class"         : "METER",
                    "readcommand"   : "GET",
                    "type"          : "ELEC",
                    "force"         : "1"
