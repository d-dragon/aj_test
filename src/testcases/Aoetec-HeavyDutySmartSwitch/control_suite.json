                }
            },

            {
                "name"              : "get_temperature",
                "description"       : "Get status of TEMP ( temperature in fahrenheit and celsius ) for verifying value which is available",
                "input"             : {
                    "devicetype"    : "zwave",
                    "id"            : "D_ID",
                    "class"         : "SENSOR_MULTILEVEL",
                    "readcommand"   : "GET",
                    "type"          : "TEMP",
                    "force"         : "1"
                },
                "verdict"       : {
                    "method"        : "reference",
                    "value"     : {
                        "fahrenheit"    : "ref",
